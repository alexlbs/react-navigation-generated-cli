{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "checkJs": true // Type checking
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "./lib/**/*"]
}
